{
  "name": "biofibers-machine-control-app",
  "productName": "biofibers-machine-control",
  "version": "0.0.1",
  "description": "Application to control a machine over serial",
  "private": true,
  "main": ".webpack/main",
  "build": {
    "appId": "org.utilityresearchlab.biofiberscontrol",
    "icon": "./icon/utility-icon-512x512.jpg",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    },
    "extends": null
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "reinstall": "npm run clean && npm install",
    "rebuild": "electron-rebuild",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "pack-mac-unv": "rm -rf ./out/biofibers-machine-control-darwin-universal && electron-forge package --platform='darwin' --arch='universal'",
    "pack-mac-x64": "rm -rf ./out/biofibers-machine-control-darwin-x64 && electron-forge package --platform='darwin' --arch='x64'",
    "pack-mac-arm64": "rm -rf ./out/biofibers-machine-control-darwin-arm64 && electron-forge package --platform='darwin' --arch='arm64'",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Michael Rivera",
    "email": "mrivera.lee@gmail.com"
  },
  "license": "GPL-3.0 license",
  "config": {
    "forge": {
      "hooks": "require:./config/hooks.js",
      "packagerConfig": {
        "appId": "org.utilityresearchlab.biofiberscontrol",
        "icon": "./icon/utility-icon-512x512",
        "osxUniversal": { 
          "x64ArchFiles": "*"
        },
        "mac": {
          "category": "public.app-category.utilities"
        },
        "win": {
          "target": "portable"
        },
        "linux": {
          "target": "AppImage"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "biofibers_machine_control"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin"]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
              "icon": "icon/utility-icon-512x512.icns"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./config/webpack.main.config.js",
            "renderer": {
              "nodeIntegration": true,
              "config": "./config/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./biofibers-machine-control-app/src/renderer/index.html",
                  "js": "./biofibers-machine-control-app/src/renderer/renderer.js",
                  "name": "main_window",
                  "preload": {
                    "js": "./biofibers-machine-control-app/src/main/preload.js"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-react": "^7.24.6",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-webpack": "^7.4.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.7.1",
    "electron": "^30.0.9",
    "node-loader": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.91.0",
    "fs-extra": "^11.2.0",
    "node-gyp": "^9.3.0"
  },
  "dependencies": {
      "@emotion/react": "^11.10.4",
      "@emotion/styled": "^11.10.4",
      "@fontsource/roboto": "^4.5.8",
      "@mui/icons-material": "^5.10.9",
      "@mui/material": "^5.10.9",
      "electron-squirrel-startup": "^1.0.0",
      "tableify": "1.1.1",
      "serialport": "^10.4.0"
  },
  "resolutions": {
    "serialport": "^10.4.0"
  }
}
